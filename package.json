{
  "private": false,
  "name": "@mchegdali/better-auth-cosmosdb-adapter",
  "version": "1.0.2",
  "description": "CosmosDB database adapter for Better-Auth",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "better-auth",
    "cosmosdb",
    "database",
    "adapter",
    "authentication",
    "azure"
  ],
  "author": "Moustapha Chegdali",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@azure/cosmos": "^4.5.0",
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^22.17.1",
    "@vitest/coverage-v8": "^3.2.4",
    "better-auth": "^1.3.9",
    "tsdown": "0.14.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@azure/cosmos": "^4.5.0",
    "better-auth": "^1.3.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  }
}