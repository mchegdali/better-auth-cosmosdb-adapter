{
  "private": false,
  "name": "cosmosdb-adapter",
  "version": "1.0.0",
  "description": "CosmosDB database adapter for Better-Auth",
  "type": "module",
  "scripts": {
    "build": "tsdown --minify",
    "dev": "tsdown --watch",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "better-auth",
    "cosmosdb",
    "database",
    "adapter",
    "authentication",
    "azure"
  ],
  "author": "Moustapha Chegdali",
  "license": "MIT",
  "devDependencies": {
    "@azure/cosmos": "^4.5.0",
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^22.17.1",
    "@vitest/coverage-v8": "^3.2.4",
    "better-auth": "^1.3.4",
    "tsdown": "^0.14.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@azure/cosmos": "^4.5.0",
    "better-auth": "^1.3.4"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  }
}